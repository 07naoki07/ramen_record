<% if user_signed_in? %>
  <% if record.liked_by?(current_user) %>
    <%= link_to record_likes_path(record), method: :delete,remote: true do %>
     ♥<%= record.likes.count %> いいね
    <% end %>
  <% else %>
    <%= link_to record_likes_path(record), method: :post,remote: true do %>
     ♡<%= record.likes.count %> いいね
    <% end %>
  <% end %>
<% end %>