<div class= "container">
 <h1>投稿詳細</h1>
 <div class= "row">
  <div class="col-lg-4">
   <%= image_tag @record.get_image, size: '300x300' %>
  </div>
  <div class="col-lg-8">
  <table class = "table table-borderless">
   <tbody>
    <tr>
     <td>日時</td>
     <td>
      <%= @record.created_at %>
     </td>
    </tr>

    <tr>
     <td>投稿ユーザー名</td>
     <td>
      <%= @user.name %>
     </td>
    </tr>

    <tr>
     <td>店名</td>
     <td>
      <%= @record.shop_name%>
     </td>
    </tr>

    <tr>
     <td>メニュー名</td>
     <td>
      <%= @record.name%>
     </td>
    </tr>

    <tr>
     <td>評価</td>
     <td>
      <div id="star-rate-<%= @record.id %>"></div>
     </td>
    </tr>

    <tr>
     <td>説明</td>
     <td>
      <%= @record.caption%>
     </td>
    </tr>

    <tr>
     <td>
      <% if @user == current_user %>
       <%= link_to "編集",edit_record_path(@record.id),class:"btn btn-sm btn-success" %>
      <% end %>
      <% if @user == current_user %>
       <%= link_to "削除",record_path(@record.id), method: :delete, "data-confirm" => "本当に消しますか？" ,class:"btn btn-sm btn-danger"%>
      <% end %>
     </td>
    </tr>

   </tbody>
  </table>
  </div>
  </div>
  <script>
 $('#star-rate-<%= @record.id %>').raty({
  size: 36,
  starOff:  '<%= asset_path('star-off.png') %>',
  starOn : '<%= asset_path('star-on.png') %>',
  starHalf: '<%= asset_path('star-half.png') %>',
  half: true,
  readOnly: true,
  score: <%= @record.rate %>,
  });
</script>

  <div class = "row">
  <table class ="table">

    <tr>
     <td>コメント</td>
     <td>
      <%= render "user/comments/form", record: @record, comment: @comment %>
     </td>
    </tr>
　</table>

  <table class ="table">
    <tr>
     <td>いいね</td>
     <td>
      <%= render "user/likes/likes", record: @record %>
     </td>
    </tr>
    <tr>
     <td>コメント一覧</td>
     <td>
      <%= render "user/comments/comments", record: @record, comment: @comment, comments: @comments%>
     </td>
    </tr>
  </table>
  </div>
</div>
