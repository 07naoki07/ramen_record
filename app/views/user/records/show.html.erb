    var test ={lat: <%= @record.latitude %>,lng: <%= @record.longitude %>};

    map = new google.maps.Map(document.getElementById("map"), {
      center: test,
      zoom: 15,
    });

    var contentString = "住所：<%= @record.address %>";
    var infowindow = new google.maps.InfoWindow({
