<h1>投稿フォーム</h1>
  <%= form_with model: @record,:url => {:action => :create} do |f| %>
    <h4>日付</h4>
    　<%= f.date_field :created_at %>
    <h4>画像</h4>
      <%= f.file_field :image, accept: "image/*" %>
    <h4>ラーメン店名</h4>
      <%= f.text_field :shop_name %>
    <h4>ラーメン名</h4>
    　<%= f.text_field :name %>
    <div class="field" id="star">
      <%= f.label :rate, "星評価：" %>
      <%= f.hidden_field :rate, id: :review_star %>
    </div>
    <h4>説明</h4>
      <%= f.text_area :caption %>
    <%= f.submit '投稿' %>
  <% end %>