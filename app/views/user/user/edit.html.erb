<main>
  <p id="notice"></p>
  <div class="container">
   <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
     <h2>メンバー情報変更</h2>
      <% if @user.errors.any? %>
      <%= @user.errors.count %>error prohibited this obj from being saved
      <ul>
        <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
      <% end %>
         <%= form_with model: @user do |f| %>
          <div class="form-group">
            <label for="user _name">ユーザー名</label>
            <%= f.text_field :name,class:"form-control" %>
          </div>
          <div class="form-group">
            <label for="user_image">ユーザー画像</label><br>
            <%= f.file_field :profile_image, placeholder: "プロフィール画像" %>
          </div>
          <div class="form-group">
            <label for="user_introduction">自己紹介</label>
            <%= f.text_field :introduction,class:"form-control" %>
          </div>
          <div class="form-group">
            <%= f.submit :"更新",class:"btn btn-lg btn-block btn-secondary mt-4" %>
          </div>
          <% end %>
      </div>
     </div>
  </div>
</main>