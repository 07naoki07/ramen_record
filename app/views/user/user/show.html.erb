
<table>
		<tr>
			<td style="width:170px;"><%= image_tag @user.get_profile_image(200,200) %></td>
			<td class="profile">
				<div id="name-level">
					<h2><%= @user.name %></h2>
						<div class="separator"></div>
				   <div class="props"><%= @user.introduction %></div>
						<div class="separator"></div>
				   <p class="followings">フォロー数: <%= @user.followings.count %></p>
						<div class="separator"></div>
				   <p class="followers">フォロワー数: <%= @user.followers.count %></p>
						<div class="separator"></div>
						<p class="edit"><%= link_to "プロフィール編集", edit_user_registration_path(@user) %></p>
						<div class="separator"></div>
				<div>
				<div class="btns">
				 <% if current_user.following?(@user) %>
      <button type="button" class="btn btn-outline-secondary">
       <%= link_to "フォロー外す", user_relationships_path(@user.id), method: :delete %>
      </button>
					<% else %>
					 <button type="button" class="btn btn-outline-primary">
					  <%= link_to "フォローする", user_relationships_path(@user.id), method: :post %>
					 </button>
     <% end %>
    </div>
		</tr>
	</table>