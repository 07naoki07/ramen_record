<header class="header py-3">
 <div class="row flex-nowrap justify-content-between align-items-center">
  <div class="col-4 pt-1">
  </div>
  <div class="col-4 text-center">
   <h2>
   <%= link_to root_path,class:'text-dark' do %>
    <%= image_tag "ramen_icon.png", size: '60x60'%>ラーメン記録
   <% end %>
   </h2>
  </div>
  <div class="col-4 d-flex justify-content-end align-items-center">
   <%= search_form_for q, url: records_search_path, class:"search-form" do |f| %>
    <%= f.search_field :shop_name_or_name_cont, placeholder: 'キーワードから探す', class:'input-box' %>
    <%= f.button type: "submit", class:"search-button" do%>
     <i class="fas fa-search"></i>
    <% end %>
   <% end %>
  </div>
</header>

<nav class="navbar navbar-expand-lg navbar-light bg-dark">
 <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
  <span class="navbar-toggler-icon"></span>
 </button>
 <div class="collapse navbar-collapse justify-content-around" id="navbarNav">
  <ul class="navbar-nav ml-auto">
   <% if user_signed_in? %>
    <li class="nav-item">
     <%=link_to user_index_path,class:'text-light nav-link' do %>
      <i class="fas fa-users"></i>ユーザー一覧
     <% end %>
    </li>

    <li class="nav-item">
     <%=link_to records_path,class:'text-light nav-link' do %>
      <i class="fas fa-book"></i>投稿一覧
     <% end %>
    </li>

    <li class="nav-item">
     <%= link_to new_record_path,class:'text-light nav-link' do %>
      <i class="fas fa-plus"></i>投稿フォーム
     <% end %>
    </li>

    <li class="nav-item">
     <%= link_to user_path(current_user),class:'text-light nav-link' do %>
      <i class="fas fa-user"></i>マイページ
     <% end %>
    </li>

    <li class="nav-item">
     <%= link_to destroy_user_session_path, method: :delete ,class:'text-light nav-link' do %>
      <i class="far fa-hand-spock"></i>ログアウト
     <% end %>
    </li>
   <% else %>

    <li class="nav-item">
     <%=link_to user_index_path,class:'text-light nav-link' do %>
      <i class="fas fa-users"></i>ユーザー一覧
     <% end %>
    </li>

    <li class="nav-item">
     <%=link_to records_path,class:'text-light nav-link' do %>
      <i class="fas fa-book"></i>投稿一覧
     <% end %>
    </li>

    <li class="nav-item">
     <%= link_to new_user_registration_path,class:'text-light nav-link' do %>
      <i class="fas fa-user-plus"></i>新規登録
     <% end %>
    </li>

    <li class="nav-item">
     <%= link_to new_user_session_path,class:'text-light nav-link' do %>
      <i class="fas fa-power-off"></i>ログイン
     <% end %>
    </li>
   <% end %>
  </ul>
 </div>
</nav>
